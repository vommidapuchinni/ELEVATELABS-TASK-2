pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                // Use credentials if needed for private repo
                git credentialsId: 'github-creds', url: 'https://github.com/vommidapuchinni/ELEVATELABS-TASK-2.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t nodejs-app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                // Stop & remove old container if already exists (to avoid conflict)
                sh '''
                    docker stop myapp || true
                    docker rm myapp || true
                    docker run -d -p 6000:6000 --name myapp nodejs-app
                '''
            }
        }
    }
}
