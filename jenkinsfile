pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', credentialsId: 'github-creds', url: 'https://github.com/vommidapuchinni/ELEVATELABS-TASK-2.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t nodejs-app .'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm install'
                // Test step after build (optional: make it fail the pipeline if needed)
                sh 'npm test || echo "No tests defined or failed tests (non-blocking)"'
            }
        }

        stage('Deploy Docker Container') {
            steps {
                sh '''
                    docker stop myapp || true
                    docker rm myapp || true
                    docker run -d -p 5000:5000 --name myapp nodejs-app
                '''
            }
        }
    }
}
