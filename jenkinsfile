pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', credentialsId: 'github-creds', url: 'https://github.com/vommidapuchinni/ELEVATELABS-TASK-2.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t nodejs-app .'
            }
        }

        stage('Test') {
            steps {
                // Run the container temporarily and test if it's working
                sh '''
                    docker run -d -p 5000:5000 --name temp-container nodejs-app
                    sleep 3
                    curl --fail http://localhost:5000
                    docker stop temp-container
                    docker rm temp-container
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    docker stop myapp || true
                    docker rm myapp || true
                    docker run -d -p 5000:5000 --name myapp nodejs-app
                '''
            }
        }
    }
}

